{
  "name": "@arnaud-barre/rds",
  "private": true,
  "type": "module",
  "version": "0.10.0",
  "license": "MIT",
  "scripts": {
    "dev": "scripts/bundle.ts --dev",
    "build": "scripts/bundle.ts",
    "tsc": "tsl && tsl -p src/client/tsconfig.json",
    "lint": "eslint --max-warnings 0",
    "prettier": "bun prettier-ci --write",
    "prettier-ci": "prettier --cache --check '*.{js,json,md}' '{.github,src,scripts}/**/*.{js,ts,yml}' '!**/*.min.js'",
    "ci": "tsc && bun lint && bun prettier-ci && bun run build && cd dist && bun link && cd ../template && bun i && bun link @arnaud-barre/rds && bun run ci"
  },
  "prettier": {
    "experimentalOperatorPosition": "start",
    "plugins": [
      "@arnaud-barre/prettier-plugin-sort-imports"
    ]
  },
  "peerDependencies": {
    "@arnaud-barre/downwind": "^0.8.0"
  },
  "dependencies": {
    "@arnaud-barre/config-loader": "^0.7.7",
    "oxc-transform": "^0.93.0",
    "chokidar": "^4.0.3",
    "es-module-lexer": "^1.7.0",
    "esbuild": "^0.25.9",
    "lightningcss": "^1.30.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@arnaud-barre/tsl-config": "^0.1.1",
    "@arnaud-barre/downwind": "^0.8.0",
    "@arnaud-barre/eslint-config": "^6.1.2",
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.2.4",
    "@types/node": "^22.18.4",
    "@types/react": "^19.1.13",
    "@types/ws": "^8.18.1",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "tsl": "^1.0.25",
    "typescript": "~5.9"
  }
}

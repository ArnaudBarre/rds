{
  "name": "@arnaud-barre/rds",
  "version": "0.1.4",
  "license": "MIT",
  "scripts": {
    "start": "scripts/bundle.ts --dev",
    "build": "scripts/bundle.ts",
    "tsc": "tsc",
    "lint": "bun lint-ci --fix --cache",
    "lint-ci": "eslint src scripts --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "bun prettier-ci --write",
    "prettier-ci": "prettier --check '*.{js,json,md}' '{.github,src,scripts}/**/*.{js,ts,yml}'",
    "ci": "tsc && bun lint-ci && bun prettier-ci && bun run build"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "@arnaud-barre/downwind": "^0.2.3",
    "@arnaud-barre/config-loader": "^0.4.1",
    "@swc/core": "^1.3.4",
    "es-module-lexer": "^1.0.3",
    "chokidar": "^3.5.3",
    "esbuild": "^0.15.10",
    "ws": "^8.9.0"
  },
  "peerDependencies": {
    "eslint": "^8",
    "typescript": "^4"
  },
  "devDependencies": {
    "@arnaud-barre/eslint-config": "^1.0.13",
    "@nabla/tnode": "^0.7.0",
    "@types/eslint": "^8.4.6",
    "@types/node": "^18.7.23",
    "@types/react": "^18.0.21",
    "@types/ws": "^8.5.3",
    "eslint": "^8.24.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  }
}

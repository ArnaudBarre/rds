{
  "name": "rds-app",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "bun local-css",
    "dev": "rds dev --open",
    "build": "rds build",
    "tsc": "tsc",
    "preview": "rds preview",
    "local-css": "downwind -o src/local.css",
    "lint": "bun lint-ci --fix --cache",
    "lint-ci": "eslint ./ --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "bun prettier-ci --write",
    "prettier-ci": "prettier --ignore-path=.gitignore --check '**/*.{ts,tsx,cjs,html,css,json,md,svg}'",
    "ci": "tsc && bun lint-ci && bun prettier-ci && bun run build"
  },
  "prettier": {
    "xmlWhitespaceSensitivity": "ignore",
    "plugins": [
      "@arnaud-barre/prettier-plugin-sort-imports",
      "@prettier/plugin-xml"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@arnaud-barre/downwind": "^0.6.2",
    "@arnaud-barre/eslint-config": "^3.1.1",
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.1.2",
    "@arnaud-barre/rds": "^0.6.0",
    "@prettier/plugin-xml": "^3.2.1",
    "@types/react-dom": "^18.2.8",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}

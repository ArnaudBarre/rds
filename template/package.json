{
  "name": "rds-app",
  "private": true,
  "scripts": {
    "postinstall": "bun local-css",
    "dev": "rds dev --open",
    "build": "tsc && rds build",
    "preview": "rds preview",
    "local-css": "downwind -o src/local.css",
    "lint": "bun lint-ci --fix --cache",
    "lint-ci": "eslint ./ --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "bun prettier-ci --write",
    "prettier-ci": "prettier --ignore-path=.gitignore --check '**/*.{ts,tsx,js,html,css,json,md,svg}'"
  },
  "prettier": {
    "trailingComma": "all",
    "xmlWhitespaceSensitivity": "ignore"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@arnaud-barre/downwind": "^0.4.0",
    "@arnaud-barre/eslint-config": "^1.0.13",
    "@arnaud-barre/rds": "^0.5.0",
    "@prettier/plugin-xml": "^2.2.0",
    "@types/react-dom": "^18.0.6",
    "eslint": "^8.26.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  }
}
